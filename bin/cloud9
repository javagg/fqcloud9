#!/bin/bash

# Location node provided by our package because centos 6 don't have node
ME=`readlink "$0" || echo "$0"`
C9_HOME=$(cd "`dirname $ME`/../" && pwd)

# Decide which node to use, systemwide node is preferred
NODE=`which node`
[ -f "$NODE" ] || NODE="$C9_HOME"/node/bin/node
[ -f "$NODE" ] || (echo "Can't find node!!!"; exit 1)

# Don't use exec
$NODE $C9_HOME/server.js $*

