<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:hbox position="13000" edge="0 5 2 7" align="center" class="underlined">
        <a:label flex="1">Scrollback</a:label>
        <a:spinner value="[auto/terminal/@scrollback]" realtime="true" min="1" max="100000" width="50" class="fixMargin2" margin="5 0 0"/>
    </a:hbox>
    <a:hbox position="10000" edge="0 5 2 7" align="center" class="underlined2">
        <a:label width="80">Font Family</a:label>
        <a:textbox value="[auto/terminal/@fontfamily]" realtime="true" flex="1" class="fixMargin5" margin="5 0 0"/>
    </a:hbox>
    <a:hbox position="11000" edge="0 5 2 7" align="center" class="underlined">
        <a:label flex="1">Font Size</a:label>
        <a:spinner value="[auto/terminal/@fontsize]" realtime="true" min="1" max="72" width="50" class="fixMargin2" margin="5 0 0"/>
    </a:hbox>
    <a:checkbox position="12000" class="underlined" label="Blinking Cursor" value="[auto/terminal/@blinking]" skin="checkbox_grey"/>
</a:application>